<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:HabitTracker.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HabitTracker.App.Views.CongratulationsView"
             x:DataType="viewModels:CongratulationsViewModel">
			<DockPanel>
			 <TextBlock Text = "{Binding Title}" FontStyle="Oblique" HorizontalAlignment="Left" VerticalAlignment="Top" > </TextBlock>
				<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"> 
					<TextBlock Text = "{Binding TotalDays}" FontStyle="Oblique" FontSize="24"> </TextBlock>
				</StackPanel>
	</DockPanel>
</UserControl>
